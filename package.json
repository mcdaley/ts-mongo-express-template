{
  "name": "ts-mongo-express-template",
  "version": "1.0.0",
  "description": "Example template for TypeScript app w/ Express and MongoDB",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "cd ./dist; rm -r *; cd ..",
    "dev": "export NODE_ENV=development; nodemon --config nodemon.json ./src/index.ts",
    "dev:debug": "export NODE_ENV=development; nodemon --config nodemon.json --inspect-brk src/index.ts",
    "start": "export NODE_ENV=development; tsc && node ./dist/index.js",
    "test": "export NODE_ENV=test; jest"
  },
  "author": "Michael Daley <mike@mcdaley.com> (https://www.mcdaley.com/)",
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-winston": "^4.1.0",
    "joi": "^17.4.0",
    "mongodb": "^3.6.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/mongodb": "^3.6.12",
    "@types/node": "^14.14.41",
    "@types/winston": "^2.4.4",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
